<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#2c2e34">

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp" android:background="@drawable/settingbar" android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:focusableInTouchMode="false"
            android:clickable="true" android:focusable="false" android:id="@+id/account">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Account"
                android:id="@+id/label1" android:layout_alignParentStart="true"
                android:textStyle="bold" android:textColor="#ffc3c3c3" android:gravity="center|center_horizontal"
                android:paddingLeft="10dp" android:layout_marginTop="2dp" android:layout_marginBottom="2dp"
                android:textSize="28dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/imageView" android:layout_alignParentStart="false"
                android:layout_alignParentEnd="true"
                android:background="@drawable/sltr_account" android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" android:layout_alignParentRight="true"/>
        style="@style/DialPadButton"
    </RelativeLayout>
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp" android:background="@drawable/settingbar"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginTop="5dp"
            android:clickable="true" android:focusable="false" android:focusableInTouchMode="false"
            android:id="@+id/settings">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Settings"
                android:id="@+id/label2" android:layout_alignParentStart="true"
                android:textStyle="bold" android:textColor="#ffc3c3c3" android:gravity="center|center_horizontal"
                android:paddingLeft="10dp" android:layout_marginTop="2dp" android:layout_marginBottom="2dp"
                android:textSize="28dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/imageView2" android:layout_alignParentStart="false"
                android:layout_alignParentEnd="true"
                android:background="@drawable/sltr_setting" android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" android:layout_alignParentRight="true"/>
        style="@style/DialPadButton"
    </RelativeLayout>
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp" android:background="@drawable/settingbar" android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:clickable="true"
            android:focusable="false" android:focusableInTouchMode="false" android:id="@+id/logout">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/label3" android:layout_alignParentStart="true"
                android:textStyle="bold" android:textColor="#FFC3C3C3" android:gravity="center|center_horizontal"
                android:paddingLeft="10dp" android:layout_marginTop="2dp" android:layout_marginBottom="2dp"
                android:textSize="28dp" android:text="Quit"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/imageView3" android:layout_alignParentStart="false"
                android:layout_alignParentEnd="true"
                android:background="@drawable/sltr_logout" android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" android:layout_alignParentRight="true"/>
        style="@style/DialPadButton"
    </RelativeLayout>
</LinearLayout>